{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "ES2022",
            "DOM"
        ],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "target": "ES2022"
    }
}