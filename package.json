{
  "name": "ruta-segura-peru",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:mobile": "npm run start -w @ruta-segura/mobile",
    "dev:agency": "npm run dev -w apps/agency-web",
    "dev:admin": "npm run dev -w apps/super-admin",
    "build:agency": "npm run build -w apps/agency-web",
    "build:admin": "npm run build -w apps/super-admin",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "backend:dev": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "backend:start": "cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "test:backend": "cd backend && python -m pytest tests/ -v"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}