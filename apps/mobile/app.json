{
  "expo": {
    "name": "Ruta Segura Perú",
    "slug": "ruta-segura-peru",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "rutaseguraperu",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rutaseguraperu.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "Necesitamos tu ubicación para mostrarte en el mapa y en caso de emergencia.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Necesitamos tu ubicación para seguimiento en tiempo real durante los tours."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1152d4",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.rutaseguraperu.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#1152d4"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir a Ruta Segura usar tu ubicación para seguimiento en tiempo real.",
          "locationAlwaysPermission": "Permitir a Ruta Segura usar tu ubicación en segundo plano.",
          "locationWhenInUsePermission": "Permitir a Ruta Segura usar tu ubicación."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/android-icon-monochrome.png",
          "color": "#1152d4"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir a Ruta Segura acceder a tu cámara para verificación biométrica."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}