# Ruta Segura Per√∫ - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=RutaSeguraPeru
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ruta_segura_peru
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT Security
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
PASSWORD_HASH_ROUNDS=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Redis (for caching & rate limiting)
REDIS_URL=redis://localhost:6379/0

# Firebase (Push Notifications)
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Plivo (SMS & Calls)
PLIVO_AUTH_ID=your-plivo-auth-id
PLIVO_AUTH_TOKEN=your-plivo-auth-token
PLIVO_PHONE_NUMBER=+1234567890

# Translation API
TRANSLATION_API_URL=https://api.openai.com/v1
TRANSLATION_API_KEY=your-api-key

# Emergency Settings
EMERGENCY_ESCALATION_MINUTES=5
EMERGENCY_SMS_ENABLED=true
EMERGENCY_CALL_ENABLED=true

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8081"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
